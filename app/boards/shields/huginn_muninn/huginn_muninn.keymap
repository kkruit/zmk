// MEDIA 5
        MEDIA_layer {
            bindings = <
                              &none            &kp C_VOL_UP       &none              &none                  &none            &msc SCRL_LEFT  &mmv MOVE_UP    &msc SCRL_RIGHT
      &none      &none        &kp C_PREV       &kp C_VOL_DN       &kp C_NEXT         &kp LSHFT              &none            &mmv MOVE_LEFT  &mmv MOVE_DOWN  &mmv MOVE_RIGHT  &msc SCRL_UP  &msc SCRL_DOWN
